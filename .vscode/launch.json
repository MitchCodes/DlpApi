{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run DLP API (uvicorn)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--host", "0.0.0.0", "--port", "8000"],
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "console": "integratedTerminal",
      "justMyCode": true,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Uvicorn running on (https?://\\S+)",
        "uriFormat": "%s/docs"
      }
    }
  ]
}
